@model Stat_reports.Models.ReportTemplateModel

@{
    ViewData["Title"] = "Редактировать шаблон отчета";
}

<h1>Редактировать шаблон отчета</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fields" class="control-label">Структура полей (JSON)</label>
        <textarea asp-for="Fields" class="form-control"></textarea>
        <span asp-validation-for="Fields" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FilePath" class="control-label">Загрузить файл шаблона</label>
        <input type="file" name="FilePath" class="form-control" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
