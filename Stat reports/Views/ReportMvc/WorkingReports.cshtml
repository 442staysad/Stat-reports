@model List<Stat_reports.ViewModels.PendingTemplateViewModel>

@{
    ViewData["Title"] = "Отчеты в работе";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <div class="container mt-4">
        <h2>@ViewData["Title"]</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Отчет</th>
                    <th>Дата предоставления</th>
                    <th>Статус</th>
                    <th>Примечание</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TemplateName</td>
                        <td>@item.Deadline.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (item.Status == "Draft" || item.Status == "NeedsCorrection")
                            {
                                <span class="badge bg-warning">@item.Status</span>
                            }
                            else if (item.Status == "Reviewed")
                            {
                                <span class="badge bg-success">@item.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>@item.Comment</td>
                        <td>
                            @if (item.Status == "Draft" || item.Status == "NeedsCorrection")
                            {
                                <a href="@Url.Action("Upload", "ReportMvc", new { templateId = item.TemplateId })" class="btn btn-sm btn-primary">Загрузить отчет</a>
                                <a href="@Url.Action("Reload", "ReportMvc", new { reportId = item.reportId })" class="btn btn-sm btn-success">Перезагрузить</a>
                            }
                            @if (item.Status == "NeedsCorrection")
                            {
                                <a href="@Url.Action("Delete", "ReportMvc", new { reportId = item.reportId })" class="btn btn-sm btn-danger">Удалить</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>