@model List<Stat_reports.ViewModels.PendingTemplateViewModel>

@{
    ViewData["Title"] = "Отчеты в работе";
    int? branchId = HttpContextAccessor.HttpContext?.Session?.GetInt32("BranchId");
    bool isGlobalUser = User.IsInRole("Admin") || User.IsInRole("PEB") || User.IsInRole("OBUnF");
    var visibleBranches = isGlobalUser
        ? Model.Select(m => new { m.BranchId, m.BranchName }).Distinct().ToList()
        : Model.Where(m => m.BranchId == branchId).Select(m => new { m.BranchId, m.BranchName }).Distinct().ToList();
}

@section Styles {
    <style>
        :root {
            --primary-color: #003366;
            --secondary-color: #0066cc;
            --accent-color: #ffcc00;
            --dark-bg: #002244;
            --light-bg: rgba(255, 255, 255, 0.9);
        }

        body {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            min-height: 100vh;
            padding: 2rem 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 12px;
            max-width: 1400px;
            margin: 0 auto;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .page-title {
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
            padding-bottom: 0.5rem;
        }

            .page-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 3px;
                background: var(--accent-color);
                border-radius: 3px;
            }

        .nav-tabs {
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 1.5rem;
        }

            .nav-tabs .nav-link {
                color: rgba(255, 255, 255, 0.8);
                border: none;
                padding: 0.75rem 1.5rem;
                font-weight: 500;
                transition: all 0.3s ease;
                border-radius: 6px 6px 0 0;
                margin-right: 0.5rem;
                position: relative;
                overflow: hidden;
            }

                .nav-tabs .nav-link::before {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 3px;
                    background: var(--accent-color);
                    transform: scaleX(0);
                    transition: transform 0.3s ease;
                }

                .nav-tabs .nav-link:hover {
                    color: white;
                    background: rgba(255, 255, 255, 0.1);
                }

                .nav-tabs .nav-link.active {
                    color: var(--primary-color);
                    background: var(--accent-color);
                    font-weight: 600;
                }

                    .nav-tabs .nav-link.active::before {
                        transform: scaleX(1);
                    }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 8px;
            overflow: hidden;
        }

            .table thead {
                background-color: var(--dark-bg) !important;
                color: white;
                position: sticky;
                top: 0;
            }

            .table th {
                padding: 1rem;
                font-weight: 500;
                border: none;
            }

            .table tbody {
                background-color: var(--light-bg);
            }

            .table td {
                padding: 0.75rem 1rem;
                vertical-align: middle;
                border-top: 1px solid rgba(0, 0, 0, 0.05);
            }

            .table tr:hover td {
                background-color: rgba(0, 0, 0, 0.02);
            }

        .badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
            font-weight: 500;
            border-radius: 4px;
        }

        .btn {
            font-weight: 500;
            padding: 0.375rem 0.75rem;
            border-radius: 4px;
            transition: all 0.2s;
            box-shadow: none !important;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #212529;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .file-input-wrapper {
            position: relative;
            display: inline-block;
            margin-right: 0.5rem;
        }

            .file-input-wrapper input[type="file"] {
                position: absolute;
                left: 0;
                top: 0;
                opacity: 0;
                width: 100%;
                height: 100%;
                cursor: pointer;
            }

        .file-input-label {
            display: inline-block;
            padding: 0.375rem 0.75rem;
            background-color: #28a745;
            border: 1px solid #28a745;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.2s;
        }

            .file-input-label:hover {
                background-color: #28a745;
            }

        .modal-content {
            border: none;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .modal-header {
            background-color: var(--primary-color);
            color: white;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }

        .modal-title {
            font-weight: 500;
        }

        .modal-body {
            padding: 1.5rem;
            line-height: 1.6;
        }

        .modal-footer {
            border-top: none;
            padding: 1rem 1.5rem;
            background-color: #f8f9fa;
        }

        .no-reports {
            background-color: var(--light-bg);
            color: #333;
            padding: 2rem;
            text-align: center;
            border-radius: 8px;
            margin-top: 1rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-icon {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
        }

        .status-inprogress .status-icon {
            background-color: #6c757d;
        }

        .status-needscorrection .status-icon {
            background-color: #ffc107;
        }

        .status-reviewed .status-icon {
            background-color: #28a745;
        }

        .status-draft .status-icon {
            background-color: #f8f9fa;
            border: 1px solid #6c757d;
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }

            .nav-tabs .nav-link {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
}

<div class="main-container">
    <h2 class="page-title">@ViewData["Title"]</h2>

    @if (isGlobalUser)
    {
        <div class="d-flex justify-content-end mb-4">
            <a asp-action="CreateTemplate" asp-controller="ReportMvc" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Добавить отчет
            </a>
        </div>
    }

    @if (visibleBranches.Any())
    {
        <ul class="nav nav-tabs" id="branchTabs" role="tablist">
            @for (int i = 0; i < visibleBranches.Count; i++)
            {
                var branch = visibleBranches[i];
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(i == 0 ? "active" : "")"
                            id="tab-@branch.BranchId"
                            data-bs-toggle="tab"
                            data-bs-target="#branch-@branch.BranchId"
                            type="button"
                            role="tab"
                            aria-controls="branch-@branch.BranchId"
                            aria-selected="@(i == 0 ? "true" : "false")">
                        @branch.BranchName
                    </button>
                </li>
            }
        </ul>

        <div class="tab-content mt-3" id="branchTabsContent">
            @for (int i = 0; i < visibleBranches.Count; i++)
            {
                var branch = visibleBranches[i];
                var branchReports = Model.Where(m => m.BranchId == branch.BranchId).ToList();
                var branchActive = i == 0 ? "show active" : "";

                <div class="tab-pane fade @branchActive" id="branch-@branch.BranchId" role="tabpanel">
                    @if (branchReports.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Отчет</th>
                                        <th>Срок сдачи</th>
                                        <th>Статус</th>
                                        <th>Примечание</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in branchReports)
                                    {
                                        <tr>
                                            <td>@item.TemplateName</td>
                                            <td>@item.Deadline.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                @if (item.Status == "InProgress")
                                                {
                                                    <span class="badge bg-secondary status-badge status-inprogress">
                                                        <span class="status-icon"></span>
                                                        В работе
                                                    </span>
                                                }
                                                else if (item.Status == "NeedsCorrection")
                                                {
                                                    <span class="badge bg-warning text-dark status-badge status-needscorrection">
                                                        <span class="status-icon"></span>
                                                        Корректировка
                                                    </span>
                                                }
                                                else if (item.Status == "Reviewed")
                                                {
                                                    <span class="badge bg-success status-badge status-reviewed">
                                                        <span class="status-icon"></span>
                                                        Принято
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark status-badge status-draft">
                                                        <span class="status-icon"></span>
                                                        Черновик
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Comment))
                                                {
                                                    <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#commentModal-@item.ReportId">
                                                        <i class="bi bi-chat-left-text"></i> Комментарий
                                                    </button>

                                                    <div class="modal fade" id="commentModal-@item.ReportId" tabindex="-1" aria-labelledby="commentModalLabel-@item.ReportId" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="commentModalLabel-@item.ReportId">Комментарий к отчету</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="alert alert-info">
                                                                        <strong>@item.TemplateName</strong><br>
                                                                        <small class="text-muted">Срок: @item.Deadline.ToString("dd.MM.yyyy")</small>
                                                                    </div>
                                                                    <div class="p-3 bg-light rounded">
                                                                        @item.Comment
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                        <i class="bi bi-x-circle"></i> Закрыть
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    @if (item.Status == "Draft" || item.Status == "NeedsCorrection")
                                                    {
                                                        @if (item.BranchId == branchId)
                                                        {
                                                            <form asp-action="ReloadReport" asp-controller="ReportMvc" method="post" enctype="multipart/form-data" class="d-inline-block">
                                                                <input type="hidden" name="reportId" value="@item.ReportId" />
                                                                <div class="file-input-wrapper">
                                                                    <label class="file-input-label btn btn-sm btn-success">
                                                                        <i class="bi bi-arrow-repeat"></i> Перезагрузить
                                                                    </label>
                                                                    <input type="file" name="file" class="form-control-file" required onchange="this.form.submit()" />
                                                                </div>
                                                            </form>
                                                        }
                                                        <a asp-action="PreviewExcel" asp-route-reportid="@item.ReportId" asp-route-deadlinetId="@item.DeadlineId" class="btn btn-sm btn-primary">
                                                            <i class="bi bi-eye"></i> Просмотр
                                                        </a>
                                                        <a asp-action="DownloadReport" asp-route-reportname="@item.TemplateName" asp-route-reportId="@item.ReportId" class="btn btn-sm btn-primary">
                                                            <i class="bi bi-download"></i> Скачать
                                                        </a>
                                                    }
                                                    else if (item.Status == "InProgress" && item.BranchId == branchId)
                                                    {
                                                        <form asp-action="UploadReport" asp-controller="ReportMvc" method="post" enctype="multipart/form-data" class="d-inline-block">
                                                            <input type="hidden" name="templateId" value="@item.TemplateId" />
                                                            <div class="file-input-wrapper">
                                                                <label class="file-input-label btn btn-sm btn-primary">
                                                                    <i class="bi bi-upload"></i> Загрузить
                                                                </label>
                                                                <input type="file" name="file" class="form-control-file" required onchange="this.form.submit()" />
                                                            </div>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="no-reports">
                            <i class="bi bi-info-circle" style="font-size: 2rem; margin-bottom: 1rem;"></i>
                            <h5>Нет отчетов для отображения</h5>
                            <p class="text-muted">Для данного филиала нет отчетов в работе</p>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-reports">
            <i class="bi bi-info-circle" style="font-size: 2rem; margin-bottom: 1rem;"></i>
            <h5>Нет доступных филиалов</h5>
            <p class="text-muted">Нет данных для отображения</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Активация всплывающих подсказок
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Плавный переход между табами
        $('#branchTabs a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });

        // Автоматическая отправка формы при выборе файла
        document.querySelectorAll('input[type="file"]').forEach(input => {
            input.addEventListener('change', function() {
                if (this.files.length > 0) {
                    this.form.submit();
                }
            });
        });
    </script>
}