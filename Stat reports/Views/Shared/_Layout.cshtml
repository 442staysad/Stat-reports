@{
    var userId = Context.Session.GetInt32("UserId") ?? 0;
    var unreadCount = (await _notificationService.GetUserNotificationsAsync(userId)).Count();
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stat_reports</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stat_reports.styles.css" asp-append-version="true" />
</head>

<body class="bg-light">
    <header>
        <!-- Навигация -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">📊 Stat_reports</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.IsInRole("Admin") || User.IsInRole("PEB") || User.IsInRole("OBUnF"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">📈 Дашборд</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                                📋 Отчеты
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="ReportMvc" asp-action="WorkingReports">Отчеты в работе</a></li>
                                <li><a class="dropdown-item" asp-controller="ReportMvc" asp-action="ReportArchive">Архив отчетов</a></li>
                                @if (User.IsInRole("Admin") || User.IsInRole("PEB")|| User.IsInRole("OBUnF"))
								{
									<li><a class="dropdown-item" asp-controller="ReportMvc" asp-action="CreateReport">Создать отчет</a></li>
								}
                                <li><a class="dropdown-item" asp-controller="SummaryReport" asp-action="Summary">Сводный отчет</a></li>
                            </ul>
                        </li>
                        <li class="nav-item position-relative">
                            <a class="nav-link" asp-controller="Notification" asp-action="Index">
                                🔔 Уведомления
                                @if (unreadCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @unreadCount
                                    </span>
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">👤 Аккаунт</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white">
        <div class="container">
            &copy; 2025 - Stat_reports - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>