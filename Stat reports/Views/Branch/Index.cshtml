@model IEnumerable<BranchDto>

@{
    ViewData["Title"] = "Филиалы";
}

@section Styles {
<style>
    .branch-table {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    border-radius: 10px;
    }

    .branch-table th, .branch-table td {
    padding: 10px;
    border-bottom: 1px solid rgba(255,255,255,0.2);
    }

    .btn-add {
    background-color: #ffcc00;
    color: #003366;
    border: none;
    padding: 10px 20px;
    font-weight: bold;
    margin-bottom: 15px;
    }
</style>
}

<div class="main-container">
    <h2>Филиалы</h2>

    <a asp-action="Create" class="btn btn-add">➕ Добавить филиал</a>

    <table class="table branch-table">
        <thead>
            <tr>
                <th>Название</th>
                <th>УНП</th>
                <th>Регион</th>
                <th>Адрес</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                @if (branch.Name != "Admin")
                {
                    <tr>
                        <td>@branch.Name</td>
                        <td>@branch.UNP</td>
                        <td>@branch.Region</td>
                        <td>@branch.Address</td>
                        <td>
                            @if (User.IsInRole("Admin")||User.IsInRole("PEB")||User.IsInRole("OBUnF"))
                            {
                                <form asp-action="Delete" asp-route-id="@branch.Id" method="post" onsubmit="return confirm('Удалить филиал?');">
                                    <button type="submit" class="btn btn-sm btn-danger">🗑 Удалить</button>
                                </form>
                            }
                    </td>
                </tr>}
            }
        </tbody>
    </table>
</div>