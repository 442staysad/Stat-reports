@model IEnumerable<Core.Entities.User>

@{
    ViewData["Title"] = "Пользователи";
}

<div class="container">
    <h1>Список пользователей</h1>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary mb-3">Добавить пользователя</a>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Ф.И.О.</th>
                <th>Позиция</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Position</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-warning">Редактировать</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>