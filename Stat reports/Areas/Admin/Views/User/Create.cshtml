@model Stat_reports.Models.UserModel

@{
    ViewData["Title"] = "Создать пользователя";
}

<h1>Создать пользователя</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Имя пользователя</label>
        <input asp-for="UserName" name="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label">ФИО</label>
        <input asp-for="FullName" name="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер телефона</label>
        <input asp-for="Number" name="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Почта</label>
        <input asp-for="Email" name="Email" class=" form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="control-label">Должность</label>
        <input asp-for="Position" name="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash" class="control-label">Пароль</label>
        <input asp-for="PasswordHash" name="PasswordHash" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" name="Role" class="form-control">
            <option value="Admin">Администратор</option>
            <option value="User">Пользователь</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="BranchId" class="control-label"></label>
        <select asp-for="BranchId" name="BranchId" class="form-control">
            <option value="">Выберите филиал</option>
            @foreach (var branch in ViewBag.Branches)
            {
                <option value="@branch.Id">@branch.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
</form>