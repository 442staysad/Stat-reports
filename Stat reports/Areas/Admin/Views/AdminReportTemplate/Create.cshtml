@model Stat_reports.Models.ReportTemplateModel

@{
    ViewData["Title"] = "Создать шаблон отчета";
}

<h1>Создать шаблон отчета</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название формы</label>
        <input asp-for="Name" name="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Загрузить файл шаблона</label>
        <input type="file" name="File" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="DeadlineType" class="control-label">Тип дедлайна</label>
        <select asp-for="DeadlineType" class="form-control">
            <option value="Monthly">Ежемесячно</option>
            <option value="Quarterly">Ежеквартально</option>
            <option value="HalfYearly">Полугодовой</option>
            <option value="Yearly">Ежегодно</option>
        </select>
        <span asp-validation-for="DeadlineType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FixedDay" class="control-label">Фиксированный день</label>
        <input asp-for="FixedDay" name="FixedDay" type="number" class="form-control" required />
        <span asp-validation-for="FixedDay" class="text-danger"></span>
    </div>

    <!-- Добавлено поле для даты отчета -->
    <div class="form-group">
        <label asp-for="ReportDate" class="control-label">Дата отчета</label>
        <input asp-for="ReportDate" name="ReportDate" type="date" class="form-control" required />
        <span asp-validation-for="ReportDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать шаблон</button>
</form>