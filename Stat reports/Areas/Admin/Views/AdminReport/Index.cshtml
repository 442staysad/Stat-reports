@model IEnumerable<Core.Entities.Report>

@{
    ViewData["Title"] = "Отчеты";
}

<div class="container">
    <h1>Список отчетов</h1>
    <a href="@Url.Action("Create", "AdminReport")" class="btn btn-primary mb-3">Добавить отчет</a>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Шаблон</th>
                <th>Дата загрузки</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.Id</td>
                    <td>@report.Name</td>
                    <td>@report.Template.Name</td>
                    <td>@report.UploadDate.ToShortDateString()</td>
                    <td>@report.Status</td>
                    <td>
                        <a href="@Url.Action("Edit", "AdminReport", new { id = report.Id })" class="btn btn-warning">Редактировать</a>
                        <a href="@Url.Action("Delete", "AdminReport", new { id = report.Id })" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
